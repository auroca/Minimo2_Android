<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="#2D5A8C"/>
            <stroke android:width="2dp" android:color="#1F3E5C"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <stroke android:width="2dp" android:color="#1F3E5C"/>
            <gradient
                android:angle="270"
                android:startColor="#5FA4E6"  android:endColor="#3F78B4"    android:type="linear"/>
        </shape>
    </item>
</selector>